<%- include('../partials/header'); -%>
<form method="POST" action="http://localhost:4000/add/event" class="col-12">

<div class=" mt-5 form-group row">

<div class="col-6">
      <input type="text" required placeholder="NAME" name="name" value="" class="form-control">
</div>
</div>
<div class=" form-group row">
    
    <div class="col-6">
        <br>
          <input  placeholder="SCHOOL" required type="date" name="start" value="" class="form-control">
    </div>
    </div>
    <div class=" form-group row">
        
        <div class="col-6">
            <br>
              <input type="date" required placeholder="DESCTRIPTION" name="stop" value="" class="form-control">
        </div>
        </div>
        <div class=" form-group row">
            
            <div class="col-6 mx-0">
                <br>
                  <input type="text" required placeholder="LOCATION" name="location" value="" class="form-control">
            </div>
            <div  class='col-5 mt-3'>
                <input type="submit" required value="ADD EVENT" class="btn btn-primary btn-lg">

            </div>
            </div>
</form>
